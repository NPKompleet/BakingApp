<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.phenomenon.bakingapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".RecipeListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecipeStepActivity"
            android:label="@string/title_recipe_step"
            android:launchMode="singleTop"
            android:parentActivityName=".RecipeListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.phenomenon.bakingapp.RecipeListActivity" />
        </activity>
        <activity
            android:name=".RecipeStepDetailActivity"
            android:label="@string/title_recipe_detail"
            android:parentActivityName=".RecipeStepActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.phenomenon.bakingapp.RecipeStepActivity" />
        </activity>

        <activity android:name=".FullScreenVideoActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <provider
            android:name=".provider.generated.RecipeProvider"
            android:authorities="com.example.phenomenon.bakingapp.provider.authority"
            android:exported="false" />

        <receiver android:name=".FavoriteRecipeWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_recipe_widget_info" />
        </receiver>
        <receiver android:name=".RecipeStepVideoFragment$MediaReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <service
            android:name=".FavoriteRecipeWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

    </application>

</manifest>