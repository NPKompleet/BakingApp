<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:id="@+id/widget_list_item">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_ingredient"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/widget_quantity"
        android:textStyle="bold"
        android:textColor="#000"
        tools:text="egg yolk"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_quantity"
        android:gravity="start"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/widget_measure"
        android:textColor="#000"
        tools:text="8"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_measure"
        android:contentDescription="@string/widget_list_image"
        android:layout_alignParentEnd="true"
        android:gravity="start|center"
        android:layout_centerVertical="true"
        tools:src="@drawable/k"/>
</RelativeLayout>