<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

<LinearLayout
    android:id="@+id/activity_step_detail_actitvity2"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.npkompleet.phenomenon.bakingapp.com.npkompleet.phenomenon.bakingapp.RecipeStepDetailActivity">

    <FrameLayout
        android:id="@+id/step_detail_video_container"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_fragment" />

    <FrameLayout
        android:id="@+id/step_detail_instruction_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
</ScrollView>